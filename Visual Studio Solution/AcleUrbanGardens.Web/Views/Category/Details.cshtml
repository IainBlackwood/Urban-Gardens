@model AcleUrbanGardens.Web.Models.DetailsCategoryViewModel

@{
    ViewBag.Title = Model.Category.Name;
    ViewBag.CreateProductMessage = "Create a new " + Model.Category.Name + " product";
}

<div>
    <h2>@ViewBag.Title Detail</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedByUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedByUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.CreateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CreateDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedByUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedByUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.UpdateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.UpdateDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Category.Id }) |
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Delete", "Delete", "Category", new { id = Model.Category.Id }, null)
</p>

<div class="row">



</div>

<div>
    <h3>The Category @Model.Category.Name has the following Sub-Categories</h3>
    @{
        if (Model.Category.Children.Count > 0)
        {
            foreach (var category in Model.Category.Children)
            {
                <div>
                    <h4>
                        @Html.ActionLink(category.Name, "Details", "Category", new { Id = category.Id }, null)
                    </h4>
                    <p>Products attached to the Sub-Category</p>
                    <ul>
                        @{
                            if (category.Products.Count() > 0)
                            {
                                foreach (var product in category.Products)
                                {
                                    <li>@Html.ActionLink(product.Name, "Details", "Product", new { Id = product.Id }, null)</li>
                                }
                            }
                            else
                            {
                                <li>There are no Products in the @category.Name sub-category</li>
                            }

                        }
                        
                    </ul>
                </div>
            }
        }
        else
        {
            <div>
                <label>There are no sub categories</label>
            </div>
        }
    }
</div>


<div>
    <h3>Products that are included in the @Model.Category.Name Category</h3>
    @if (Model.Category.Products.Count > 0)
    {
        <ul>
            @foreach(var product in Model.Category.Products)
            {
                <li>@Html.ActionLink(@product.Name, "Details", "Product", new { Id = @product.Id }, null)</li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>There are no Products in the @Model.Category.Name category.</li>
        </ul>
    }
    @Html.ActionLink((string)ViewBag.CreateProductMessage, "Create", "Product", new { categoryId = Model.Category.Id }, null)
</div>

